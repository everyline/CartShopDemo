<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:padding="10dip" >

    <LinearLayout
        android:id="@+id/ll_shop_intent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical" >

            <CheckBox
                android:id="@+id/checkBox_goods"
                android:layout_width="27dip"
                android:layout_height="27dip"
                android:button="@drawable/btn_check" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/iv_shop"
                    android:layout_width="90dp"
                    android:layout_height="90dip" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dip"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:orientation="vertical" >

                            <TextView
                                android:id="@+id/tv_shop_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:id="@+id/tv_shop_price"
                                android:layout_marginTop="5dip"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:singleLine="true" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:gravity="center"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/downbtn1"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:background="@drawable/btn_shopping_cart_product_num_reduce" />

                <Button
                    android:id="@+id/bt_num"
                    android:layout_width="38dp"
                    android:layout_height="26dp"
                    android:background="@drawable/btn_shopping_cart_product_num_edit"
                    android:gravity="center"
                    android:text="1"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/upbtn1"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:background="@drawable/btn_shopping_cart_product_num_add" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>